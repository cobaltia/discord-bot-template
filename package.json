{
	"name": "discord-bot-template",
	"version": "0.1.0",
	"main": "./dist/Bot.js",
	"type": "module",
	"scripts": {
		"clean": "node scrips/clean.mjs",
		"build": "tsc -b src",
		"dev": "yarn build && yarn start:dev",
		"lint": "eslint --fix --ext ts src tests",
		"prettier": "prettier --write .",
		"prepare": "husky install",
		"start:dev": "node --enable-source-maps dist/Cobalt.js | pino-pretty -i pid,hostname -t yyyy-mm-dd HH:MM:ss",
		"test": "vitest run",
		"test:ci": "yarn test --verbose --noStackTrace",
		"test:prettier": "prettier --check .",
		"test:typescipt": "tsc -b src"
	},
	"repository": "https://github.com/cobaltia/discord-bot-template.git",
	"author": "Isidro Casiano <personal@isidrocasiano.com>",
	"license": "MIT",
	"private": true,
	"dependencies": {
		"@sapphire/utilities": "^3.6.2",
		"discord.js": "^13.6.0",
		"globby": "^13.1.2",
		"pino": "^7.8.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.0",
		"@commitlint/config-angular": "^17.0.0",
		"@types/glob": "^7.2.0",
		"@types/node": "^17.0.21",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"c8": "^7.11.3",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.1",
		"pino-pretty": "^7.5.3",
		"prettier": "^2.5.1",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vitest": "^0.17.0"
	}
}
